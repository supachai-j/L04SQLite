<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="0dp"

    tools:context="andriod.training.cat.com.l04sqlite.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="5dp">
    <Button
        android:id="@+id/lo_bt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/strXML_clear_button"
        android:textAllCaps="false" />

        <Button
            android:id="@+id/lo_bt_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/strXML_insert_button"
            android:textAllCaps="false" />

        <Button
        android:id="@+id/lo_bt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/strXML_show_button"
        android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/lo_bt_show_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strXML_show_list_button"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>

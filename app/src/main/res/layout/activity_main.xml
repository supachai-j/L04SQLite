<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"

    tools:context="andriod.training.cat.com.l04sqlite.MainActivity">

    <Button
        android:id="@+id/lo_bt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:text="@string/strXML_clear_button"/>
    <Button
        android:id="@+id/lo_bt_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:text="@string/strXML_insert_button"/>
    <Button
        android:id="@+id/lo_bt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:text="@string/strXML_show_button"/>

</LinearLayout>
